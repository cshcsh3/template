{
  "compilerOptions": {
    "outDir": "dist/",
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "module": "esnext",
    "target": "es2015",
    "jsx": "react",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext",
      "es2016",
      "es2017.object"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true
  },
  "include": [
    "./src/**/*"
  ]
}
